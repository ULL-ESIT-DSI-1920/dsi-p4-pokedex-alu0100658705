{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["standard"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", 2], // Identaci√≥n: usar 2 espacios
		"semi": ["error", "always"] // Error si no se usa siempre
	}
}
