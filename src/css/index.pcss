.container {
	display: grid;
	grid-template-columns: repeat(8, 1fr);
	background-color: white;
	grid-gap: 10px 10px;
}

.carta {
	background-color: rgb(217, 240, 243);
	border-style: solid;
	border-color: gold;
	border-radius: 10px;
	text-align: center;
	box-shadow: 6px 6px 5px black;
	text-shadow: 0 0 5px grey;
	.front {
		display: none;
	}
	&:hover .front {
		display: inline-block;
		transform: scale(2);
	}
	&:hover .back {
		display: none;
	}

	&:hover h5 {
		display: block;
		font-size: 1.5em;
		margin-top: 0.67em;
		margin-bottom: 0.67em;
		font-weight: bold;
	}
}
